<div class="item">
  <div class="item-header rounded" id="headingOne">
    <h2 class="mb-0">
      <button
        class="btn btn-link rounded"
        type="button"
        data-toggle="collapse"
        data-target="#collapse{{id}}"
        aria-expanded="true"
        aria-controls="collapse {{title}}"
      >
        <span class="w-75 font-monospace">{{title}}</span>
        <div class="float-end px-4">
          <span class="font-monospace badge bg-secondary me-3 fs-6">posted by: <span class="fw-bold"> {{user_id}}{{username}}</span></span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="1em"
            viewBox="0 0 448 512"
            class="downarrow"
          >
            <style>
              .downarrow { fill: #ffd43b; }
            </style>
            <path
              d="M201.4 342.6c12.5 12.5 32.8 12.5 45.3 0l160-160c12.5-12.5 12.5-32.8 0-45.3s-32.8-12.5-45.3 0L224 274.7 86.6 137.4c-12.5-12.5-32.8-12.5-45.3 0s-12.5 32.8 0 45.3l160 160z"
            />
          </svg>
        </div>
      </button>
    </h2>
  </div>

  <div
    id="collapse{{id}}"
    class="collapse rounded"
    aria-labelledby="headingOne"
    data-parent="#accordionExample"
  >
    <div class="t-p rounded pb-3">
      <a href="/posts/{{id}}" class="text-decoration-none text-dark"><pre>{{post_content}}</pre>
        <div class="text-end">
          <span class="badge rounded-pill bg-primary fs-6">comments: {{ comments.length }}</span>
          <span class="badge rounded-pill bg-success fs-6">created at: {{format_date created_at}}</span>
        </div>
      </a>
    </div>
  </div>
</div>